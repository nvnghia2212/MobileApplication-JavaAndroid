    <ImageView
        android:id="@+id/imgChat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mess" />

    <TextView
        android:id="@+id/txtNameGroup"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgChat"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgChat"
        android:text="Name Group"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgAddMember"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/imgChat"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txtNameGroup"
        app:srcCompat="@drawable/addmember" />

    <ImageView
        android:id="@+id/imgMember"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/imgChat"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imgAddMember"
        app:srcCompat="@drawable/member" />

    <ImageView
        android:id="@+id/imgOutGroup"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgChat"
        android:src="@drawable/leave"/>

    <ImageView
        android:id="@+id/imgDelete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgChat"
        android:src="@android:drawable/ic_delete"
        android:visibility="gone"/>

