<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray">


    <ImageView
        android:id="@+id/imgRemove"
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_delete" />

    <AutoCompleteTextView
        android:id="@+id/autoSearch2"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:hint="Nhập địa chỉ cần tìm"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="13dp" />

    <AutoCompleteTextView
        android:id="@+id/autoSearch1"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/autoSearch2"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/autoSearch2"
        android:layout_marginTop="100dp"
        android:background="#ffffff"
        android:hint="Nhập địa chỉ cần tìm"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/imgDirectionMap"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/autoSearch1"
        android:src="@drawable/directionmap" />

</RelativeLayout>